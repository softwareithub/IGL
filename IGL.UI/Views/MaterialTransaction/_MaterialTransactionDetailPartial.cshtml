@model IEnumerable<IGL.Core.ViewModelEntities.MasterVm.TransactionVm.MaterialTransactionModel>

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Material Transaction Details</h3>

                <button class="btn btn-primary pull-right" onclick="materialTransaction.Fn_ReturnIssue()">
                    <i class="fa fa-plus-circle"> &nbsp; &nbsp; Issue/Return &nbsp; &nbsp;</i>
                </button>

            </div>
            <div class="box-body">
                <table id="IGLDataTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th> Slip Number</th>
                            <th>Employee Name</th>
                            <th>Transaction Date</th>
                            <th>Transaction Type</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model)
                        {
                            <tr>
                                <td>
                                    @data.SlipNumber
                                </td>
                                <td>
                                    @data.EmployeeName
                                </td>
                                <th>
                                    @data.TransactionDate.ToShortDateString()
                                </th>
                                <th>
                                    @data.TransactionType
                                </th>
                                <td>
                                    <a class="btn btn-outline-danger pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="employeeDetail.Fn_DeleteEmployee(@data.Id, this)">
                                        <i class="fa fa-trash" style="color:#DD4B39"></i>
                                    </a>

                                    <a class="btn btn-outline-success pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="materialTransaction.fn_GetMaterialSlip(@data.Id)">
                                        <i class="fa fa-eye" style="color:#3C8DBC"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
