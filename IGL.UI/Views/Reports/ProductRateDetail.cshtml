@model IEnumerable<IGL.Core.ViewModelEntities.MasterVm.RateMasterVm>
@{
    ViewData["Title"] = "ProductRateDetail";
}

<section class="content-header">
    <h1>
        Product Rate Detail
    </h1>
</section>
<section class="content container-fluid">
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Product Rate Report</h3>
                    </div>
                    <div class="box-body">
                        <table id="IGLDataTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th> Name</th>
                                    <th>Rate</th>
                                    <th>From Date</th>
                                    <th>To Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
                                {
                                    <tr>
                                        <td>
                                            @data.ProductName
                                        </td>
                                        <td>
                                            @data.Rate
                                        </td>
                                        <td>
                                            @data.FromDate.ToShortDateString()
                                        </td>
                                        <td>
                                            @data.ToDate
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

</section>
<environment include="Development">
    <script src="~/js/Reports/ProductRate.js"></script>
</environment>
<environment include="Production">
    <script src="~/js/Reports/ProductRate.js"></script>
</environment>




