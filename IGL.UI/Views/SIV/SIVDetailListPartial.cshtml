@model IEnumerable<IGL.Core.Entities.SIV.ApprovedSIVDetail>
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Approve SIV Details</h3>
            </div>
            <div class="box-body">
                <table id="IGLDataTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th> Po Date</th>
                            <th>Po Number</th>
                            <th>Vendor Name </th>
                            <th>Vendor Email</th>
                            <th>Vendor Phone</th>
                            <th>Vendor Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model)
                        {
                            <tr>
                                <td>
                                    @data.PoDate.ToShortDateString()
                                </td>
                                <td>
                                    @data.PoNumber
                                </td>
                                <td>
                                    @data.VendorName
                                </td>
                                <td>
                                    @data.vendorEmail
                                </td>
                                <td>
                                    @data.VendorPhone
                                </td>
                                <td>
                                    @data.VendorType
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
               
            </div>
        </div>
    </div>
</div>