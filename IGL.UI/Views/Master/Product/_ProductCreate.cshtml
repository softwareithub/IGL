@model IGL.Core.Entities.Master.MaterialMaster

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<form id="form" method="post" data-ajax="true" data-ajax-method="post"
      asp-action="UpSertMaterial" asp-controller="MaterialMaster" data-ajax-success="productDetail.Fn_Success"
      data-ajax-begin="customAjax.Fn_SubmitBegin(divModalPopUp)" data-ajax-complete="customAjax.Fn_SubmitComplete(divModalPopUp)">
    <div class="row" id="divUnitMasterCreate">
        <div class="col-xs-12">
            <div class="col-md-4 form-group">
                <input type="hidden" asp-for="Id" />
                <label class="control-label"> Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="col-md-4 form-group">
                <label class="control-label">Code</label>
                <input asp-for="Code" class="form-control" />
            </div>
            <div class="col-md-4 form-group">
                <label class="control-label">Unit Type</label>
                <select asp-for="UnitId" class="form-control" asp-items="@(new SelectList(ViewBag.UnitMaster,"Id","Name"))">
                    <option value="0">Select</option>
                </select>
            </div>
            <div class="col-md-4 form-group clearB">
                <label class="control-label">Per Unit Cost</label>
                <input asp-for="PerUnitCost" class="form-control" />
                <span asp-validation-for="PerUnitCost"></span>
            </div>
            <div class="col-md-4 form-group">
                <label class="control-label">Is Payable</label>
                <select asp-for="IsPayable" class="form-control">
                    <option value="0">No (IGL Free Product)</option>
                    <option value="1">Yes (Vendor Product)</option>
                </select>
            </div>
            <div class="col-md-4 form-group">
                <label class="control-label">Opening Quantity</label>
                <input asp-for="OpeningQuantity" class="form-control" />
                <span asp-validation-for="OpeningQuantity"></span>
            </div>
            <div class="col-md-4 form-group">
                <label class="control-label">Threshold Quantity</label>
                <input asp-for="ThresholdValue" class="form-control" />
                <span asp-validation-for="ThresholdValue"></span>
            </div>
            <div class="col-md-4 form-group">
                <label class="control-label">Product HSN Code </label>
                <input asp-for="HSNCode" class="form-control" />
                <span asp-validation-for="HSNCode"></span>
            </div>
            <div class="col-md-4 form-group">
                <label class="control-label">Is Each Product Has Unique Number</label>
                <select asp-for="IsUnique" class="form-control">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
                <span asp-validation-for="IsUnique"></span>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="col-sm-8">
                <button type="submit" class="btn btn-primary pull-right" value="Save">
                    <i class="fa fa-download"> &nbsp;&nbsp;Save</i>
                </button>
            </div>
            <div class="col-sm-4">
                <button type="reset" class="btn btn-warning" value="reset">
                    <i class="fa fa-refresh">&nbsp;&nbsp;Reset</i>
                </button>
            </div>
        </div>
    </div>
</form>