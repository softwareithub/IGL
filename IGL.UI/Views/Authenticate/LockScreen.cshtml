@{ Layout = null;}
@{ 
    var userName = Context.User.Identity.Name;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>IGL Cordent | Lockscreen</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Ionicons/css/ionicons.min.css">
    <link href="~/bootstrap/AdminLTE.css" rel="stylesheet" />
    <link href="~/bootstrap/skin-blue.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition lockscreen">
    <div class="lockscreen-wrapper">
        <div class="lockscreen-logo">
            <a><b>IGL</b>CORDENT</a>
        </div>
        <div class="lockscreen-name">@userName</div>
        <div class="lockscreen-item">
            <div class="lockscreen-image">
                <img src="~/images/LogoImage.jpg" style="height:70px;width:70px" alt="User Image">
            </div>
            <form asp-controller="Account" asp-action="AuthenticateUser" method="post">
                <input type="hidden" name="UserName" value="@userName" />
                <div class="input-group">
                    <input type="password" name="Password" class="form-control" placeholder="password">
                    <div class="input-group-btn">
                        <button type="submit" class="btn"><i class="fa fa-arrow-right"></i></button>
                    </div>
                </div>
            </form>
            <!-- /.lockscreen credentials -->

        </div>
        <!-- /.lockscreen-item -->
        <div class="help-block text-center">
            Enter your password to retrieve your session
        </div>
        <div class="text-center">
            <a asp-controller="Account" asp-action="Index">Or sign in as a different user</a>
        </div>
        <div class="lockscreen-footer text-center">
            Copyright &copy; @DateTime.Now.Date <b><a href="#" class="text-black">IGL Coredent</a></b><br>
            All rights reserved
        </div>
    </div>
    <!-- /.center -->
    <!-- jQuery 3 -->
    <script src="~/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
