@model IEnumerable<IGL.Core.ViewModelEntities.MasterVm.UserManagementVm.UserDetailVm>
@{
    ViewData["Title"] = "User Detail";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">User  Details</h3>

                <button class="btn btn-primary pull-right" onclick="userDetail.Fn_UpsertUserDetail()">
                    <i class="fa fa-plus-circle"> &nbsp; &nbsp; Add &nbsp; &nbsp;</i>
                </button>

            </div>
            <div class="box-body">
                <table id="IGLDataTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>User Name</th>
                            <th>Password</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Role Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model)
                        {
                            <tr>
                                <td>
                                    @data.UserName
                                </td>
                                <td>
                                    @data.Password
                                </td>
                                <td>
                                    @data.Name
                                </td>
                                <td>
                                    @data.EmailId
                                </td>
                                <td>
                                    @data.Phone
                                </td>
                                <td>
                                    @data.Address
                                </td>
                                <td>
                                    @data.RoleName
                                </td>
                                <td>

                                    <a class="btn btn-outline-danger pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="userDetail.Fn_DeleteUserDetail(@data.Id, this)">
                                        <i class="fa fa-trash" style="color:#DD4B39"></i>
                                    </a>

                                    <a class="btn btn-outline-success pull-right" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'  style='color:#DD4B39'></i>" onclick="userDetail.Fn_EditUserDetail(@data.Id, this)">
                                        <i class="fa fa-edit" style="color:#3C8DBC"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

